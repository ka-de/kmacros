{
  "name": "kmacros",
  "displayName": "kmacros",
  "description": "Handy little macros UwU",
  "icon": "images/icon.png",
  "publisher": "_ka_de",
  "version": "0.0.17",
  "permissions": [
    "clipboard"
  ],
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ka-de/kmacros"
  },
  "activationEvents": [],
  "main": "./out/kmacros.js",
  "contributes": {
    "configuration": {
      "title": "kmacros",
      "properties": {
        "kmacros.showNotifications": {
          "type": "boolean",
          "default": false,
          "description": "Show notifications from the extension."
        },
        "kmacros.removeCommentsInMarkdown": {
          "type": "boolean",
          "default": false,
          "description": "Remove comments in Markdown files when copying to clipboard."
        },
        "kmacros.removeWhitespaceInMarkdown": {
          "type": "boolean",
          "default": false,
          "description": "Remove whitespace in Markdown files when copying to clipboard."
        }
      }
    },
    "commands": [
      {
        "command": "kmacros.inlineMacroArgs",
        "title": "Inline Rust Macro Arguments"
      },
      {
        "command": "kmacros.createHuggingFaceLink",
        "title": "Create HuggingFace Link"
      },
      {
        "command": "kmacros.removeCommentsOnCopy",
        "title": "Remove Comments on Copy"
      }
    ],
    "keybindings": [
      {
        "command": "kmacros.inlineMacroArgs",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "editorTextFocus"
      },
      {
        "command": "kmacros.createHuggingFaceLink",
        "key": "ctrl+alt+h",
        "when": "editorTextFocus"
      },
      {
        "command": "kmacros.removeCommentsOnCopy",
        "key": "ctrl+c",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
